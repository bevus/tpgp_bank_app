@using BankApp.Models
@model BankApp.Models.AddAccountForm

@{
    ViewBag.Title = "Ajouter un compte";
    var customer = ViewBag.customer as Customer; 
}

<h2>Ajouter un compte</h2>
<hr/>
<div class="row">
    <div class="col-md-3">
        <h5>
            <b>Numéro client : </b>
            <span>@customer.AccountNumber</span>
        </h5>
        <h5>
            <b>Prénom : </b>
            <span>@customer.FirstName</span>
        </h5>
        <h5>
            <b>Nom : </b>
            <span>@customer.LastName</span>
        </h5>
    </div>
    <div class="col-md-9">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.BIC, "BIC", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.BIC, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BIC)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IBAN, "IBAN", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.IBAN, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IBAN)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Ajouter" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>