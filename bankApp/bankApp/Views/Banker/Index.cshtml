@model IEnumerable<BankApp.Models.Customer>

@{
    ViewBag.Title = "Liste des clients";
}

<h2>Liste des clients</h2>
<p>
    @Html.ActionLink("Ajouter un client ", "Create", "Banker")
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Numéro client</th>
            <th>Prenom</th>
            <th>Nom</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td> @item.AccountNumber</td>
            <td> @item.FirstName</td>
            <td> @item.LastName</td>
            <td class="text-right">
                @Html.ActionLink("Historique", "CustomerHistory", new { id = item.ID },   new { @class = "btn btn-sm btn-success"})
                @Html.ActionLink("Imprimer RIB", "CustomerRIB", new { id = item.ID },     new { @class = "btn btn-sm btn-info" })
                @Html.ActionLink("Virement", "CustomerTrensfer", new { id = item.ID },    new { @class = "btn btn-sm btn-warning" })
                @Html.ActionLink("Ajouter un compte", "AddAccount", new { id = item.ID }, new { @class = "btn btn-sm btn-primary" })
            </td>
        </tr>
    }
    </tbody>
</table>