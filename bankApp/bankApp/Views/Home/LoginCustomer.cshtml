@model BankApp.Models.LoginCustomerForm

@{
    ViewBag.Title = "Connexion client";
}

<h2>Connexion</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.CustomerNumber, "Numero client", new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.CustomerNumber, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CustomerNumber)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password, "Mote de passe", new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Connexion" class="btn btn-primary" />
            </div>
        </div>
    </div>
}