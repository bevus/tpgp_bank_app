@model bankApp.Models.TrensferFrom

@{
    ViewBag.Title = "Faire un virement";
}

<h2>Virement</h2>
<hr/>
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.Amount, "Montant")<br/>
        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Amount, null, new { @class = "has-error" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Label, "Intitulé")<br />
        @Html.TextBoxFor(m => m.Label, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Label)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.IBAN, "IBAN destination")<br />
        @Html.TextBoxFor(m => m.IBAN, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.IBAN)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DestinationFullName, "Nom complet du bénificiare")<br />
        @Html.TextBoxFor(m => m.DestinationFullName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DestinationFullName)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SourceAccount, "Compte créditeur")<br />
        @Html.DropDownListFor(m => m.SourceAccount, Model.AccountsId, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.SourceAccount)
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}

